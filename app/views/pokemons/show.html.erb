<h1><%= @pokemon.name %></h1>

<h3>Stats</h3>
<ul>
  <li><%= @pokemon.age %></li>
  <li><%= @pokemon.strength %></li>
  <li><%= @pokemon.ability %></li>
  <li><%= @pokemon.poketype %></li>
</ul>

<%= form_for [@pokemon, @review] do |f| %>
  <%= f.label :body, "Leave a review" %>
  <%= f.text_field :body %>

  <%= f.label :rating, "Rating (scale of 1 - 5)" %>
  <%= f.text_field :rating %>

  <%= f.submit "Add Review", class: "button" %>
<% end %>

<h2>Reviews</h2>
<div class="reviews">
  <% if @reviews.present? %>
    <% @reviews.each do |review| %>
      Rating: <%= review.rating %>
      Review: <%= review.body %>
    <% end %>
  <% end %>
</div>
